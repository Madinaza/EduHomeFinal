<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @foreach (Carousel carousel in Model.Carousels)
                {
                    <div class="col-lg-8 offset-lg-2">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/assets/img/testimonial/@carousel.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@carousel.Title</p>
                                    <h4>@carousel.FullName</h4>
                                    <span>
                                        @foreach (CarouselPositioncs carouselPositioncs in carousel.CarouselPositioncs)
                                        {

                                            if (carouselPositioncs == carousel.CarouselPositioncs.LastOrDefault())
                                            {
                                                @carouselPositioncs.possition.Name
                                            }
                                            else
                                            {
                                                @(carouselPositioncs.possition.Name+" ,")
                                            }
                                        }
                                    </span>

                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
