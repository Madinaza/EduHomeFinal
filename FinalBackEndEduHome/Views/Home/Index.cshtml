@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<section id="slider-container" class="slider-area">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (Slider slider in Model.Sliders)
        {
            <div class="single-slide item" style="background-image: url(assets/img/slider/@slider.Image)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-7 col-md-offset-left-5">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content">
                                        <h3>@slider.Title</h3>
                                        
                                        <p>@Html.Raw(slider.Description) </p>
                                        <a class="default-btn" href="about.html">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>

        }

    </div>
</section>
<!-- Background Area End -->
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                 <div class="notice-left">
                    <h3>@Model.Notices.FirstOrDefault()?.Heading</h3>

                    @foreach (Notice notice in Model.Notices)
                    {
                        <div class="single-notice-left mb-25 pb-25">
                            <h4>@notice.Time.Date.ToString("d, MMMM yyyy")</h4>
                            <p>@notice.Desc </p>
                        </div>

                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="notice-right">
                    @foreach (IndexAbout about in @Model.IndexAbouts)
                    {
                        <div class="single-notice-right mb-25 pb-10">
                            <h3>@about.Title</h3>
                            <p>@about.Desc </p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
<section class="choose-area pb-85 pt-77">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-left-4">
                <div class="choose-content text-start">
                    <h2>@Model.WhyChooses.FirstOrDefault()?.Title</h2>
                    <p>@Model.WhyChooses.FirstOrDefault()?.MainDesc </p>
                    <p class="choose-option">@Model.WhyChooses.FirstOrDefault()?.SecondDesc </p>
                    <a class="default-btn" asp-controller="Course" asp-action="Index">view courses</a>
                </div>
