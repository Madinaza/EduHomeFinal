                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Course item in Model.Courses)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-course">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="~/assets/img/course/@item.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@item.Title</a></h3>
                            <p>@(item.Description.Substring(0,121))</p>
                            <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="default-btn">read more</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
