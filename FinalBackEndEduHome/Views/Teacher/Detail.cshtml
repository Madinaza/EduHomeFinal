@model TeacherVM
@{
    ViewData["Title"] = "Detail";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>teachers / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="teacher-details-img">
                    <img src="~/assets/img/teacher/@Model.Teacher.DetailImage" alt="teacher" style="width: 400px">
                </div>
            </div>
            <div class="col-md-7">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Teacher.FullName</h2>
                    <h5>@Model.Teacher.Proffesion</h5>
                    <h4>about me</h4>
                    <p>@Html.Raw(@Model.Teacher.About)</p>
                    <ul>
                        <li><span>degree: </span>@Model.Teacher.Faculty</li>
                        <li><span>experience: </span>@Model.Teacher.Experience</li>
                        <li><span>hobbies: </span>@Model.Teacher.Hobbies</li>
                        <li><span>faculty: </span>@Model.Teacher.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                 
                    <ul>
                        <li><a href="@Model.TeacherContact.FacebookURL"><i class="zmdi zmdi-facebook""></i></a></li>
                        <li><a href="@Model.TeacherContact.InstagramURL"><i class="zmdi zmdi-pinterest""></i></a></li>
                        <li><a href="@Model.TeacherContact.TwitterURL"><i class="zmdi zmdi-vimeo"></i></a></li>
                        <li><a href="@Model.TeacherContact.PinterestURL"><i class="zmdi zmdi-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
