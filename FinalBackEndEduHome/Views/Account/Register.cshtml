@model RegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Admin/vendors/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Admin/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img  src="~/Admin/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Join us today! It takes only few steps</h6>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post"  asp-action="Register" asp-controller="Account" class="pt-3">

                                <div class="form-group">
                                    <label style="display:block">FullName</label>
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span  class="input-group-text ">
                                                <i class="mdi mdi-account-outline text-primary"></i>

                                            </span>
                                        </div>
                                        <input asp-for="FullName" type="text" class="form-control form-control-lg border-left-0" placeholder="FullName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="display:block">Username</label>
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="UserName" type="text" class="form-control form-control-lg border-left-0" placeholder="Username">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="display:block">Email</label>
                                    <span class="text-danger" asp-validation-for="Email"></span>

                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text ">
                                                <i class="mdi mdi-email-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Email" type="email" class="form-control form-control-lg border-left-0" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label style="display:block">Password</label>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span  class="input-group-text ">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Password" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label style="display:block">ConfirmPassword</label>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text ">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>

                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="ConfirmPassword">
                                    </div>
                                </div>


                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script  src="~/Admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script  src="~/Admin/js/off-canvas.js"></script>
    <script  src="~/Admin/js/hoverable-collapse.js"></script>
    <script  src="~/Admin/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
