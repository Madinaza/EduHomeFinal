@model EventPostVM
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create new Event</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Title</label>
                                <input asp-for="Title" class="form-control" placeholder="">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Description</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Date</label>
                                <input asp-for="Date" class="form-control" placeholder="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label for="exampleInputUsername1">Location</label>
                                <input asp-for="venur" class="form-control" placeholder="Location">
                                <span asp-validation-for="venur" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Image">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input asp-for="DetailImgFILE" accept="image/*" class="form-control" placeholder="Image">
                                <span asp-validation-for="DetailImgFILE" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Speakers</label>
                                <select class="form-control" asp-for="SpeakerIds">
                                    @foreach (var s in Model.Speakers)
                                    {
                                        <option value="@s.Id">@s.FullName</option>
                                    }
                                </select>

                                <span asp-validation-for="SpeakerIds" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

