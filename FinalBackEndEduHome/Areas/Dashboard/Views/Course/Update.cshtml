@model CourseGetVM
@{
    ViewData["Title"] = "Update";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Courses</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input asp-for="Course.ImageFile" accept="image/*" class="form-control" placeholder="Image">
                                <span asp-validation-for="Course.ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input asp-for="Course.DetailImgFile" accept="image/*" class="form-control" placeholder="Image">
                                <span asp-validation-for="Course.DetailImgFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">MainTitle</label>
                                <input asp-for="Course.Title" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Assesments</label>
                                <input asp-for="Course.Feature.Assements" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Assements" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Duration</label>
                                <input asp-for="Course.Feature.Duration" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Duration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">CourseDuration</label>
                                <input asp-for="Course.Feature.ClassDuration" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.ClassDuration" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Students</label>
                                <input asp-for="Course.Feature.Student" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Student" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Language</label>
                                <input asp-for="Course.Feature.Language" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Language" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Starts</label>
                                <input asp-for="Course.Feature.Starts" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Starts" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">SkillLevel</label>
                                <input asp-for="Course.Feature.SkillLevel" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.SkillLevel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Price</label>
                                <input asp-for="Course.Feature.Price" class="form-control" placeholder="">
                                <span asp-validation-for="Course.Feature.Price" class="text-danger"></span>
                            </div>




                            <div class="form-group">
                                <label for="exampleInputUsername1">Categories</label>
                                <select class="form-control" asp-for="CategoryIds">
                                    @foreach (var s in Model.Categories)
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                </select>

                                <span asp-validation-for="CategoryIds" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_PartialView" />
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
