@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <a class="btn btn badge-outline-danger"  asp-controller="slider" asp-action="CreateMultiple">Create multiple Sliders</a>
        <div class="card-body">

            <h4 class="card-title">List of Sliders</h4>
            <p class="card-description">
                Add class <code>.table-dark</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td style="width:400px">
                                    @Html.Raw(item.Description)
                                </td>
                                <td>
                                    <img style="width:250px;height:250px" src="~/assets/img/slider/@item.Image" />
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-controller="Slider" asp-action="Deteil" asp-route-id="@item.Id">Detail</a>
                                    <a class="btn btn-warning" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

