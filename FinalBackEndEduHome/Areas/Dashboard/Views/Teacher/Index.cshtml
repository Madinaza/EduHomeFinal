@model List<TeacherListVM>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List of Teachers</h4>
            <p class="card-description">
                Add class <code>.table-dark</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>
                                    @teacher.Id
                                </td>
                                <td>
                                    @teacher.FullName
                                </td>
                                <td style="width:400px">
                                   @teacher.Proffession
                                </td>
                                <td>
                                    <img style="width:250px;height:250px" src="~/assets/img/teacher/@teacher.MainImage" />
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id">Detail</a>
                                    <a class="btn btn-warning" asp-controller="Teacher" asp-action="Update" asp-route-id="@teacher.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id">Delete</a>
                                    <a class="btn btn-danger" asp-controller="Skill" asp-action="Index" asp-route-id="@teacher.Id" >Skills</a>

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

