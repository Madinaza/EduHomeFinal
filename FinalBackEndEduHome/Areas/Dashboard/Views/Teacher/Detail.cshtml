@model TeacherListVM
@{
    ViewData["Title"] = "Detail";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.FullName</h4>
                        <img src="~/assets/img/teacher/@Model.DetailImage" style="width: 300px" />

                        <p>
                            Degree: @Model.Degree
                        </p>
                        <p>
                            Hobbies: @Model.Hobbies
                        </p>
                        <p>
                            Faculty: @Model.Faculty
                        </p>
                        <p>
                            Experience: @Model.Experience
                        </p>


                        <p>
                            Instagram: @Model.TeacherContact?.InstagramURL
                        </p>
                        <p>
                           FaceBook: @Model.TeacherContact?.FacebookURL
                        </p>
                        <p>
                          Twitter  @Model.TeacherContact?.TwitterURL
                        </p><p>
                           Pinterest: @Model.TeacherContact?.PinterestURL
                        </p>




                      

                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

