@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>
                         <a class="byn btn badge-outline-danger" asp-controller="Category" asp-action="Create">New</a>



                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            id
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @category.Id
                                            </td>
                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                
                                                <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                                <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>

                                                  
                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", "#DeleteCat", function () {
                let id = $(this).data("id");
                console.log(id);
                $.ajax({
                    type: "GET",
                    url: "/Dashboard/category/delete/" + id,
                    success: function (response) {
                        $("body").append(response);
                        $("#exampleModal").modal('show');
                    }
                })
            })
        });
    </script>
    }
